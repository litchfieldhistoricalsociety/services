<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!--
  CollectionObject schema (XSD)
  
  Entity  : CollectionObject
  Part    : Local - Litchfield Historical Society
  Used for: Nuxeo EP core document type
-->

<xs:schema 
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:ns="http://collectionspace.org/services/collectionobject/local/lhs"
  xmlns="http://collectionspace.org/services/collectionobject/local/lhs"
  targetNamespace="http://collectionspace.org/services/collectionobject/local/lhs"
  version="0.1">

    <xs:element name="category" type="xs:string"/>
    <xs:element name="loanAllowed" type="xs:boolean"/>
    <xs:element name="legalOwner" type="xs:string"/>
    <xs:element name="provenance" type="xs:string"/>
    <xs:element name="homeLocation" type="xs:string"/>
    <xs:element name="cultures">
        <xs:complexType>
              <xs:sequence>
                  <xs:element name="culture" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
              </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="signed" type="xs:boolean"/>
    <xs:element name="legalStatus" type="xs:string"/>
    <xs:element name="legalStatusDate" type="xs:date"/>

    <xs:element name="catalogingDateMade" type="xs:string"/>
    <xs:element name="catalogingDateEarliestYear" type="xs:integer"/>
    <xs:element name="catalogingDateLatestYear" type="xs:integer"/>
    <xs:element name="catalogingDateCenturies">
        <xs:complexType>
              <xs:sequence>
                  <xs:element name="catalogingDateCentury" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
              </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="catalogingDateNote" type="xs:string"/>

    <xs:element name="objectInscriptionGroupList" type="ns:objectInscriptionGroupList"/>

    <xs:element name="formerOwnerGroupList" type="ns:formerOwnerGroupList"/>

<!-- =================================================================
     Inscription Group repeating structure
     ================================================================= -->

    <xs:complexType name="objectInscriptionGroupList">
        <xs:sequence>
            <xs:element name="objectInscriptionGroup" type="ns:objectInscriptionGroup" minOccurs="0"
                maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="objectInscriptionGroup">
        <xs:sequence>
            <xs:element name="objectInscriptionType" type="xs:string"/>
            <xs:element name="objectInscriptionText" type="xs:string"/>
            <xs:element name="objectInscriptionLocation" type="xs:string"/>
            <xs:element name="objectInscriptionNote" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

<!-- =================================================================
     Former Owner Group repeating structure
     ================================================================= -->

    <xs:complexType name="formerOwnerGroupList">
        <xs:sequence>
            <xs:element name="formerOwnerGroup" type="ns:formerOwnerGroup" minOccurs="0"
                maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="formerOwnerGroup">
        <xs:sequence>
            <xs:element name="formerOwner" type="xs:string"/>
            <xs:element name="formerOwnerDate" type="xs:date"/>
            <xs:element name="formerOwnerPlace" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
